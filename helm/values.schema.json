{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the chart name",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full release name",
      "default": ""
    },
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "default": ""
        },
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": []
        }
      }
    },
    "agent": {
      "type": "object",
      "properties": {
        "pendingGracePeriod": {
          "type": "integer",
          "description": "Seconds before reporting Pending pods as failed",
          "default": 120,
          "minimum": 0
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "ghcr.io/nan0c0de/kure-monitor/agent"
            },
            "tag": {
              "type": "string",
              "default": "2.1.0"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent"
            }
          },
          "required": ["repository", "tag"]
        },
        "clusterMetrics": {
          "type": "object",
          "description": "Cluster metrics collection settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable cluster metrics collection",
              "default": true
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "100m"},
                "memory": {"type": "string", "default": "128Mi"}
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "500m"},
                "memory": {"type": "string", "default": "512Mi"}
              }
            }
          }
        },
        "rbac": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "serviceAccount": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean",
              "default": true
            },
            "name": {
              "type": "string",
              "default": "kure-agent"
            }
          }
        }
      },
      "required": ["image"]
    },
    "securityScanner": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "ghcr.io/nan0c0de/kure-monitor/security-scanner"
            },
            "tag": {
              "type": "string",
              "default": "2.1.0"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent"
            }
          },
          "required": ["repository", "tag"]
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "100m"},
                "memory": {"type": "string", "default": "128Mi"}
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "500m"},
                "memory": {"type": "string", "default": "512Mi"}
              }
            }
          }
        },
        "rbac": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "serviceAccount": {
          "type": "object",
          "properties": {
            "create": {
              "type": "boolean",
              "default": true
            },
            "name": {
              "type": "string",
              "default": "kure-security-scanner"
            }
          }
        }
      },
      "required": ["image"]
    },
    "backend": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "ghcr.io/nan0c0de/kure-monitor/backend"
            },
            "tag": {
              "type": "string",
              "default": "2.1.0"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
              "default": "ClusterIP"
            },
            "port": {
              "type": "integer",
              "default": 8000
            },
            "targetPort": {
              "type": "integer",
              "default": 8000
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "200m"},
                "memory": {"type": "string", "default": "256Mi"}
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "1000m"},
                "memory": {"type": "string", "default": "1Gi"}
              }
            }
          }
        }
      },
      "required": ["image"]
    },
    "frontend": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "default": "ghcr.io/nan0c0de/kure-monitor/frontend"
            },
            "tag": {
              "type": "string",
              "default": "2.1.0"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
              "default": "ClusterIP"
            },
            "port": {
              "type": "integer",
              "default": 8080
            },
            "targetPort": {
              "type": "integer",
              "default": 8080
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "100m"},
                "memory": {"type": "string", "default": "128Mi"}
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string", "default": "500m"},
                "memory": {"type": "string", "default": "512Mi"}
              }
            }
          }
        }
      },
      "required": ["image"]
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "external": {
          "type": "boolean",
          "default": false
        },
        "host": {
          "type": "string",
          "default": ""
        },
        "port": {
          "type": "integer",
          "default": 5432
        },
        "database": {
          "type": "string",
          "default": "kure"
        },
        "username": {
          "type": "string",
          "default": "kure"
        },
        "password": {
          "type": "string",
          "default": "kure-password-change-me"
        },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "size": {
              "type": "string",
              "default": "10Gi"
            },
            "storageClass": {
              "type": "string",
              "default": ""
            },
            "accessMode": {
              "type": "string",
              "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
              "default": "ReadWriteOnce"
            }
          }
        }
      },
      "required": ["database", "username", "password"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "className": {
          "type": "string",
          "default": ""
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {"type": "string"},
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {"type": "string"},
                    "pathType": {"type": "string"},
                    "service": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "auth": {
      "type": "object",
      "description": "Dashboard authentication configuration",
      "properties": {
        "apiKey": {
          "type": "string",
          "description": "API key for dashboard authentication. If empty, dashboard is open.",
          "default": ""
        }
      }
    },
    "security": {
      "type": "object",
      "description": "Security settings",
      "properties": {
        "encryptionKey": {
          "type": "string",
          "description": "Fernet key for API key encryption (auto-generated if empty)",
          "default": ""
        }
      }
    },
    "prometheus": {
      "type": "object",
      "description": "Prometheus metrics configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Prometheus scraping network policy",
          "default": false
        },
        "namespace": {
          "type": "string",
          "description": "Namespace where Prometheus is deployed",
          "default": "monitoring"
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Create ServiceMonitor resource (requires Prometheus Operator)",
              "default": false
            }
          }
        }
      }
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {"type": "boolean", "default": true},
        "runAsUser": {"type": "integer", "default": 1001},
        "runAsGroup": {"type": "integer", "default": 1001},
        "allowPrivilegeEscalation": {"type": "boolean", "default": false},
        "readOnlyRootFilesystem": {"type": "boolean", "default": true},
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {"type": "string"},
              "default": ["ALL"]
            }
          }
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Localhost", "Unconfined"],
              "default": "RuntimeDefault"
            }
          }
        }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {"type": "boolean", "default": true},
        "runAsUser": {"type": "integer", "default": 1001},
        "runAsGroup": {"type": "integer", "default": 1001},
        "fsGroup": {"type": "integer", "default": 1001}
      }
    }
  },
  "required": ["agent", "backend", "frontend", "postgresql"]
}